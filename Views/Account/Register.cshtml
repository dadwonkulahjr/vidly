@model RegisterAccountViewModel
@{
    ViewData["Title"] = "Register new account";
}

<h2>
    <i class="fa fa-user"></i>&nbsp;Register new account
</h2>
<hr />
<div class="container">
    <div class="row justify-content-center align-content-center">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <form method="post">
                <div asp-validation-summary="All" style="font-weight:bold;" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="Email" class="col-form-label col-sm-2"></label>
                    <div class="col-sm-10">
                        <input asp-for="Email" class="form-control" placeholder="Enter your email here..." />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Password" class="col-form-label col-sm-2"></label>
                    <div class="col-sm-10">
                        <input asp-for="Password" class="form-control" placeholder="Enter your password here..." />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="ConfirmedPassword" class="col-form-label col-sm-2"></label>
                    <div class="col-sm-10">
                        <input asp-for="ConfirmedPassword" class="form-control" placeholder="Enter confirmation password here..." />
                        <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12 mt-3 mb-5">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-sign-in-alt"></i>&nbsp;Sumbit
                        </button>
                        <a asp-controller="home" asp-action="index" class="btn btn-success">
                            <i class="fa fa-arrow-alt-circle-left"></i>&nbsp;Cancel
                        </a>
                    </div>
                </div>
            </form>


        </div>


    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
